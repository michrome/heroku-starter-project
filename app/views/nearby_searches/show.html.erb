<%= render 'form' %>

<h3>Landmarks near to <%= @poi.name %> (ordered by distance)</h3>

<div id="map-canvas" style="margin: 0 auto; padding: 0; height: 350px;
        width: 75%;"></div>

<ul class="nearby">
  <% @nearby_pois.each do |poi| %>
    <%= content_tag :li, poi.name %>
  <% end %>
</ul>

<%= content_for :head do %>
  <%= render 'map' %>
<% end %>
